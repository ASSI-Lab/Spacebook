<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Department</th>
      <th>Typology</th>
      <th>Space</th>
      <th>Floor</th>
      <th>Seats</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.dep_name %></td>
        <td><%= space.typology %></td>
        <td><%= space.name %></td>
        <td><%= space.floor %></td>
        <td><%= space.number_of_seats %></td>
        <td><%= space.state %></td>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

