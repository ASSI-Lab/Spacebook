<div class="modal fade" id="dep<%= selected_department.id %>MapModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-fullscreen mt-4 ms-auto me-auto" style="width: 80%; height: 80%">
        <div class="modal-content form-c-label">
            <div class="modal-header">
                    <div><!-- Serve per mandare a capo il text-small -->
                        <label class="h4 mt-4 mb-0"> Pianta del dipartimento </label>
                        <div class="small text-white"> Clicca sulla pianta per esplorare gli spazi del dipartimento selezionato. </div>
                    </div>
                <button type="button" class="btn bi bi-x-lg" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <% if selected_department.dep_map!=nil %>
                    <div id="chart"></div>
                    <script src="https://cdn-eu.seatsio.net/chart.js"></script>
                    <script>
                        new seatsio.SeatingChart({
                            divId: 'chart',
                            workspaceKey: '<%= ENV['SEATS_IO_PUBLIC'] %>',
                            event: '<%= selected_department.dep_event %>'
                        }).render();
                    </script>
                <% end %>
            </div>
        </div>
    </div>
</div>