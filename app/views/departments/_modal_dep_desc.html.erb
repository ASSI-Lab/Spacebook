<!-- Modal di modifica che permette ad un manager di aggiornare alcuni campi del suo dipartimento -->

<div class="modal fade" id="dep<%= department.id %>DescModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content form-c-label">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"> Descrizione </h5>
                <button type="button" class="btn bi bi-x-lg" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <%= department.description %>
            </div>
        </div>
    </div>
</div>