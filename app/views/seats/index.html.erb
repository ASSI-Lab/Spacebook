<p id="notice"><%= notice %></p>

<h1>Seats</h1>

<table>
  <thead>
    <tr>
      <th>Department</th>
      <th>Typology</th>
      <th>Space</th>
      <th>Position</th>
      <th>Start date</th>
      <th>End date</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seats.each do |seat| %>
      <tr>
        <td><%= seat.department %></td>
        <td><%= seat.typology %></td>
        <td><%= seat.space %></td>
        <td><%= seat.position %></td>
        <td><%= seat.start_date %></td>
        <td><%= seat.end_date %></td>
        <td><%= seat.state %></td>
        <td><%= link_to 'Show', seat %></td>
        <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
        <td><%= link_to 'Destroy', seat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

