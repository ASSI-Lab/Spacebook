<h2>Cambia la tua password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nuova password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caratteri minimi)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "nuova-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Conferma nuova password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nuova-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
