<!DOCTYPE html>
<html>
	<!-- HEADER -->
	<head>
		<meta name="viewport" content="width=device-width,initial-scale=1">
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

	</head>

  <body>
 

<div class="centralBox">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="label">
    <%= f.label :email %><br />
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"campoT" %>
  </div>

  <div class="label">
    <%= f.label :password %>
 
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  
  </div>
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", :class=>"campoT" %>
  </div>

  
  <div class="label">
    <%= f.label :password_confirmation %><br />
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class=>"campoT" %>
  </div>

 

  <div class="role">
  <% for role in User::ROLES %>
    <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"}%>
    <%= label_tag "user_roles_#{role}", role.humanize %><br />
  <% end %>
  <%= hidden_field_tag "user[roles][]", "" %>
  </div>


  
  <div class="actions">
    <%= f.submit  class:"btn btn-signup", value:"Sign up" %>
  </div>

<% end %> 

<div class="links">
<%= render "users/shared/links" %>
</div>

</div>





</body>



</html>






