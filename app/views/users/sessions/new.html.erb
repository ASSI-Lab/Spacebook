<!DOCTYPE html>
<html lang="it">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<title> Login - Spacebook </title>
	
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    	
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

</head>

<body class="bg-primary">
	<div id="layoutAuthentication">
		<div id="layoutAuthentication_content">
			<main>
				<div class="container">
					<div class="row justify-content-center">
						<div class="col-lg-5">
							<div class="card shadow-lg border-0 rounded-lg mt-5">
								<div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
									<div class="card-body">
										<!-- <form> -->
										<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
											<div class="form-floating mb-3">
												<!-- 
												<input class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
												<label for="inputEmail"> Email address </label> -->
												<div class="label">
													<%= f.label :email %><br>
												</div>
												<div class="field">
													<%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"campoT"  %>
												</div>
											</div>
											<div class="form-floating mb-3">
												<!--
												<input class="form-control" id="inputPassword" type="password" placeholder="Password" />
												<label for="inputPassword"> Password </label> -->
												<div class="label">
													<%= f.label :password %><br>
												</div>
												<div class="field">
													<%= f.password_field :password, autocomplete: "current-password", :class=>"campoT"  %>
												</div>
											</div>
											<div class="form-check mb-3">
												<!--
												<input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
												<label class="form-check-label" for="inputRememberPassword"> Remember Password </label> -->
												<% if devise_mapping.rememberable? %>
													<div class="role">
														<%= f.check_box :remember_me %>
														<%= f.label :remember_me %>
													</div>
												<% end %>
											</div>
											
										<!-- /form> -->
										<div class="card-footer text-center py-3">
											<div class="actions">
												<%= f.submit class:"btn btn-outline-info", type:"submit", value:"Sign in"%> 
											</div>
										</div>
										<% end %>

										<!-- Links -->
										<div class="d-flex align-items-center justify-content-between mt-4 mb-0">
											<div>
												<%= render "users/shared/links" %>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</body>
</html>