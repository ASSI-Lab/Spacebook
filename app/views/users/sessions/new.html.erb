<!DOCTYPE html>
<html lang="it">
<head>

	<title> Login - Spacebook </title>

</head>

<body class="bg-primary">
	<div id="layoutAuthentication">
		<div id="layoutAuthentication_content">
			<main>
				<div class="container">
					<div class="row justify-content-center mt-5">
						<div class="col-lg-5">
							<div class="card mt-5">
								<div class="card-header"><h3 class="text-center font-weight-light my-4">Accedi</h3></div>
									<div class="card-body">

										<!-- Form -->
										<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
											<div class="form-floating mb-3">
												<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", required: :true, placeholder: "plh" %>
												<label class="form-c-label" for="email"> Email </label>
											</div>
											<div class="form-floating mb-3">
												<%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password", required: :true, placeholder: "plh" %>
												<label class="form-c-label" for="password"> Password </label>
											</div>
											<div class="form-check mb-3">
												<% if devise_mapping.rememberable? %>
													<div class="role">
														<%= f.check_box :remember_me %>
														<%= f.label "Mantieni l'accesso" %>
													</div>
												<% end %>
											</div>
											
											<div class="actions text-center py-3">
												<%= f.submit "Accedi", class:"btn btn-outline-info", type:"submit" %> 
											</div>
										<% end %>

										<!-- Links -->
										<div class="d-flex align-items-center justify-content-between mt-4 mb-0">
											<div id="signLinks">
												<%= render "users/shared/links" %>
											</div>
										</div>

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
	</div>
</body>
</html>