<p id="notice"><%= notice %></p>

<h1>Week Days</h1>

<table>
  <thead>
    <tr>
      <th>Dep name</th>
      <th>Day</th>
      <th>State</th>
      <th>Apertura</th>
      <th>Chiusura</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @week_days.each do |week_day| %>
      <tr>
        <td><%= week_day.dep_name %></td>
        <td><%= week_day.day %></td>
        <td><%= week_day.state %></td>
        <td><%= week_day.apertura %></td>
        <td><%= week_day.chiusura %></td>
        <td><%= link_to 'Show', week_day %></td>
        <td><%= link_to 'Edit', edit_week_day_path(week_day) %></td>
        <td><%= link_to 'Destroy', week_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Week Day', new_week_day_path %>
